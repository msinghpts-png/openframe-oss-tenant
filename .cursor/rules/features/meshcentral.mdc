       if (tokenExpiration.isBefore(LocalDateTime.now().plusMinutes(5))) {
           return login().map(token -> {
               authToken = token;
               tokenExpiration = LocalDateTime.now().plusHours(1);
               return authToken;
           });
       }
       return Mono.just(authToken);
